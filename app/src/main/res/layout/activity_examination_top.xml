<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/defaultBackgroundGray"
    android:orientation="vertical"
    tools:context="com.linkhand.mokao.ui.activity.module.ExaminationTopActivity">

    <include
        layout="@layout/include_header_red"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginTop="@dimen/x10"
        android:background="@drawable/bg_textview_small_corner_white"
        android:orientation="vertical"
        android:padding="@dimen/x10"
        >

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="标题"
            android:textColor="@color/blackText"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/release_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="发布时间"
            android:textColor="@color/grayText"
            android:textSize="12sp"
            />

        <View
            style="@style/grayline"
            android:layout_marginBottom="@dimen/x5"
            android:layout_marginTop="@dimen/x5"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="各位员工："
            android:textColor="@color/blackText"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/x5"
            android:text="内容"
            android:textColor="@color/blackText"
            android:textSize="14sp"
            />

        <View
            style="@style/grayline"
            android:layout_marginBottom="@dimen/x5"
            android:layout_marginTop="@dimen/x5"/>

        <TextView
            android:id="@+id/time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="考试时间："
            android:textColor="@color/blackText"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/x3"
            android:text="总分："
            android:textColor="@color/blackText"
            android:textSize="14sp"
            />

        <View
            style="@style/grayline"
            android:layout_marginBottom="@dimen/x5"
            android:layout_marginTop="@dimen/x5"/>

        <TextView
            android:id="@+id/cishu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/x3"
            android:text="剩余考试次数："
            android:textColor="@color/blackText"
            android:textSize="14sp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x10"
        android:background="@drawable/bg_textview_small_corner_redtopic"
        android:gravity="center"
        android:padding="@dimen/x10"
        android:text="@string/start_exam"
        android:textColor="@color/white"/>
</LinearLayout>
