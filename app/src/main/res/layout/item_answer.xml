        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x10"
        android:padding="@dimen/x10"
        android:text="时的发生的发生的啥打法是否三大时的发生的时的发生的"
